{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Bump Patch Version",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["version", "patch", "--no-git-tag-version"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "postDebugTask": "npm install (post-bump)"
    }
  ]
}
